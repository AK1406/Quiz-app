<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4CD6C"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/quiz_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/check_your_knowledge_related_to_android"
            android:textAlignment="center"
            android:textColor="#105513"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quiz_heading">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/each_question_carry_2_marks_total_20_marks"
                android:textAlignment="center"
                android:textColor="#E16161" />

            <ImageView
                android:id="@+id/questionMark"
                android:layout_width="332dp"
                android:layout_height="285dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/quiz"
                tools:ignore="MissingConstraints" />

            <androidx.cardview.widget.CardView style="@style/cardViewStyle">

                <LinearLayout style="@style/linearLayoutStyle">

                    <TextView
                        android:id="@+id/question1"
                        style="@style/questionTextStyle"
                        android:text="@string/question1" />

                    <RadioGroup
                        android:id="@+id/ques1_options"
                        style="@style/radioGroupStyle">


                        <RadioButton
                            android:id="@+id/q1op1"
                            style="@style/radioButtonStyle"
                            android:text="@string/q1a1"
                            tools:text="false" />

                        <RadioButton
                            android:id="@+id/q1op2"
                            style="@style/radioButtonStyle"
                            android:text="@string/q1a2"
                            tools:text="false" />

                        <RadioButton
                            android:id="@+id/q1op3"
                            style="@style/radioButtonStyle"
                            android:text="@string/q1a3"
                            tools:text="false" />

                        <RadioButton
                            android:id="@+id/q1op4"
                            style="@style/radioButtonStyle"
                            android:text="@string/q1a4"
                            tools:text="@string/q1a4True" />

                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView style="@style/cardViewStyle">

                <LinearLayout style="@style/linearLayoutStyle">

                    <TextView
                        android:id="@+id/question2"
