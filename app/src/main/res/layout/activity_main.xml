                        style="@style/questionTextStyle"
                        android:text="@string/question5" />

                    <CheckBox
                        android:id="@+id/q5op1"
                        style="@style/checkBoxStyle"
                        android:text="@string/q5a1" />


                    <CheckBox
                        android:id="@+id/q5op2"
